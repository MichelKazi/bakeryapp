<div>
    <% results = 0 %>
    <% products.each do |product| %>
        <% if product.name.include? term | product.desc.include? term %>
            <div class="product">
            <h3 class="product-title"> <%= product.name %></h3>
            <img src="<%= product.img %>" width=275>
                <p class="product-description"><%= product.desc %></p>
            </div>
        <% end %>
    <% end %>
</div>